{
    "compilerOptions": {
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "types": ["node"],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}